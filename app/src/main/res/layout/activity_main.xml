<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slider_content">

        <include
            android:id="@+id/top_navi"
            layout="@layout/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refesh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_navi"
            android:layout_above="@+id/bottom_navi">
            <WebView
                android:id="@+id/webview"
		        android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <include
            android:id="@+id/bottom_navi"
            layout="@layout/navigation_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/top_navi"
            android:background="@drawable/top_title_shader"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/errorNotice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fefefe"
            android:gravity="center"
            android:visibility="invisible"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#343434"
            android:textSize="24sp"
            android:typeface="sans"
            android:layout_below="@+id/top_navi"
            android:layout_above="@+id/bottom_navi"
            tools:text="加载失败，点击重试" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:layout_below="@+id/top_navi" />
        <FrameLayout
            android:id="@+id/fullScreenVedio"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/slider_menu_container"
        android:layout_height="match_parent"
        android:layout_width="230dp"
        android:layout_gravity="end"/>
</android.support.v4.widget.DrawerLayout>
